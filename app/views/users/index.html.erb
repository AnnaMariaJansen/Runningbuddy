<div class="d-flex w-100">
  <div>
    <div>
      <div class="card-trip-container">
        <% @users.each do |user| %>
          <div class="card-trip">
            <img src="https://images.unsplash.com/photo-1483721310020-03333e577078?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80">

              <div style="display: flex" class="card-trip-infos">
                <div>
                  <h2><%= user.name %></h2>
                  <p>Birthday: <%= user.birthday %></p>
                  <p>Gender: <%= user.gender %></p>
                  <p>Running Level: <%= user.running_level %></p>
                </div>
                <%= link_to "More", user_path(user), class: "button-green" %>
              </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="buttons-bottom m-3">
  <%= link_to "Back", :back, class: "button-green" %>
  <p>looking for a whole different run?  <%= link_to "Create your own Run!", new_run_path, class: "btn btn-createrun" %></p>
</div>
